<% @user.errors.full_messages.each do |m| %>
  <%= m %>
<% end %>

<h3>Chad form_for(@your_instance_variable) form</h3>
<%= form_for(@user) do |f| %>
  <%= f.label(:username) %>
  <%= f.text_field(:username, value: "#{@user.username}")%>

  <%= f.label(:email) %>
  <%= f.text_field(:email, value: "#{@user.email}") %>

  <%= f.label(:password, value: "New password") %>
  <%= f.password_field(:password) %>

  <%= f.submit %>

<% end %>